            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div id="main-container">
            <nav>
                {% include 'partials/sidebar.html.twig' %}
            </nav>
            <main id="wrap">
                <header>
                    {% include 'partials/header.html.twig' %}
                </header>
                <div id="content">
                    {% block body %}{% endblock %}
                </div>
            </main>
        </div>
    </body>
</html>
