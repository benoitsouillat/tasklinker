{% extends 'base.html.twig' %}

{% block body %}
    <div id="tasks-container">
        <div class="task-column">
            <h2>To Do</h2>
            <div class="tasks-list">
                {% for task in todo %}
                    <a class="task" href="{{ path('app_task_edit', {'id': task.id}) }}">
                        <h3>{{ task.title }}</h3>
                        <p>{{ task.description }}</p>
                        <div class="task-infos">
                            {% if task.date is not null %}
                                <div class="task-deadline">
                                    <i class="fa-regular fa-calendar"></i> {{ task.date|date('d/m/Y') }}
                                </div>
                            {% endif %}
                            {% if task.employee is not null %}
                                <div class="mini-user">
                                    {{ task.employee.thumbnail ?? task.employee.getInitial() }}
                                </div>
                            {% endif %}
                        </div>
                    </a>
                {%  endfor %}
                <a href="{{ path('app_project_add-task', {'id': project.id}) }}" class="task-add">
                    + Ajouter une tâche
                </a>
            </div>
        </div>
